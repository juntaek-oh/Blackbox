{
  "hybrid": {
    "default_mode": "ask",
    "default_quality": "720p",
    "auto_delete_temp": true
  },
  "youtube": {
    "url": "https://www.youtube.com/watch?v=OoHzud9L48s",
    "output_dir": "output"
  },
  "video": {
    "file_path": "blackbox.mp4",
    "output_dir": "output"
  },
  "video_mode": {
    "loop": true,
    "speed": 1.0,
    "save_result": true
  },
  "model": {
    "weights_path": "yolov4-tiny.weights",
    "config_path": "yolov4-tiny.cfg",
    "classes_path": "coco.names",
    "input_size": 416
  },
  "detection": {
    "confidence_threshold": 0.5,
    "nms_threshold": 0.4,
    "traffic_light_confidence_threshold": 0.3,
    "detection_interval": 2
  },
  "traffic_light": {
    "enable_detection": true,
    "stability_frames": 2
  },
  "tracking": {
    "iou_threshold": 0.25,
    "max_lost_frames": 8,
    "movement_threshold": 2
  },
  "display": {
    "show_preview": true,
    "window_width": 1280,
    "window_height": 720
  }
}